<div class="container-lg mx-auto px-6 py-8">
  
  <!-- Header with Actions -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <%= link_to bots_path, class: "inline-flex items-center gap-2 text-muted hover:text-primary transition-all mb-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4" %>
        Back to Bots
      <% end %>
      <h1 class="text-3xl font-bold flex items-center gap-3">
        <span class="gradient-text"><%= @bot.name %></span>
        <span class="<%= @bot.online? ? 'badge-success' : 'badge-neutral' %> flex items-center gap-1">
          <%= lucide_icon @bot.online? ? "signal" : "signal-zero", class: "w-3 h-3" %>
          <span><%= @bot.online? ? "Online" : "Offline" %></span>
        </span>
        <!-- Connection Indicator -->
        <span class="w-2 h-2 rounded-full <%= @bot.online? ? 'bg-success' : 'bg-danger' %>" 
              data-connection-indicator></span>
      </h1>
      <p class="text-muted mt-2"><%= @bot.description.presence || "No description" %></p>
    </div>
    <div class="flex gap-3">
      <%= link_to edit_bot_path(@bot), class: "btn-outline" do %>
        <%= lucide_icon "edit", class: "w-5 h-5" %>
        Edit
      <% end %>
      <%= button_to bot_path(@bot), method: :delete, 
          data: { turbo_confirm: "Are you sure you want to delete this bot?" },
          class: "btn-danger" do %>
        <%= lucide_icon "trash-2", class: "w-5 h-5" %>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Real-time Stats -->
      <div class="grid md:grid-cols-3 gap-4">
        <div class="card card-elevated">
          <div class="card-body">
            <div class="flex items-center justify-between mb-2">
              <span class="text-muted text-sm">Active Sessions</span>
              <%= lucide_icon "activity", class: "w-4 h-4 text-primary" %>
            </div>
            <div class="text-3xl font-bold text-primary">
              <%= @bot.bot_sessions.active.count %>
            </div>
          </div>
        </div>
        
        <div class="card card-elevated">
          <div class="card-body">
            <div class="flex items-center justify-between mb-2">
              <span class="text-muted text-sm">Uptime</span>
              <%= lucide_icon "clock", class: "w-4 h-4 text-success" %>
            </div>
            <div class="text-xl font-bold text-primary">
              <%= @bot.active_session ? distance_of_time_in_words(@bot.active_session.duration) : "N/A" %>
            </div>
          </div>
        </div>
        
        <div class="card card-elevated">
          <div class="card-body">
            <div class="flex items-center justify-between mb-2">
              <span class="text-muted text-sm">Total Sessions</span>
              <%= lucide_icon "database", class: "w-4 h-4 text-secondary" %>
            </div>
            <div class="text-3xl font-bold text-primary">
              <%= @bot.bot_sessions.count %>
            </div>
          </div>
        </div>
      </div>

      <!-- Integration Section -->
      <div class="card card-elevated">
        <div class="card-header">
          <h2 class="text-xl font-bold text-primary">Integration Details</h2>
        </div>
        <div class="card-body space-y-6">
          <!-- SDK Token -->
          <div>
            <label class="form-label">SDK Token</label>
            <div class="flex items-center gap-2" data-controller="clipboard">
              <input type="text" 
                     value="<%= @bot.sdk_token %>" 
                     readonly 
                     class="form-input font-mono text-sm"
                     data-clipboard-target="source">
              <button data-action="click->clipboard#copy" class="btn-outline btn-sm">
                <%= lucide_icon "copy", class: "w-4 h-4" %>
              </button>
            </div>
            <p class="form-help">Use this token to connect your local OpenClaw instance</p>
          </div>

          <!-- API Key -->
          <div>
            <label class="form-label">API Key</label>
            <div class="flex items-center gap-2" data-controller="clipboard">
              <input type="text" 
                     value="<%= @bot.api_key %>" 
                     readonly 
                     class="form-input font-mono text-sm"
                     data-clipboard-target="source">
              <button data-action="click->clipboard#copy" class="btn-outline btn-sm">
                <%= lucide_icon "copy", class: "w-4 h-4" %>
              </button>
            </div>
            <p class="form-help">API key for webhook authentication</p>
          </div>

          <!-- Rokid Device ID / 绑定二维码 -->
          <div>
            <label class="form-label">Rokid 灵珠平台绑定</label>
            <% if @bot.rokid_user_id.present? %>
              <!-- 已绑定 -->
              <div class="flex flex-col gap-2">
                <div class="flex items-center gap-2">
                  <input type="text" 
                         value="<%= @bot.rokid_user_id %>" 
                         readonly 
                         class="form-input font-mono text-sm flex-1"
                         placeholder="User ID">
                  <% if @bot.rokid_device_id.present? %>
                    <input type="text" 
                           value="<%= @bot.rokid_device_id %>" 
                           readonly 
                           class="form-input font-mono text-sm flex-1 opacity-50"
                           placeholder="Device ID">
                  <% end %>
                  <span class="badge-success">已绑定</span>
                </div>
                <p class="text-xs text-muted">User ID 已绑定到灵珠平台智能体</p>
                <%= button_to unbind_rokid_bot_path(@bot), method: :delete,
                    data: { turbo_confirm: "确定要解除绑定吗？解除后需要重新扫码绑定。" },
                    class: "btn-outline btn-sm whitespace-nowrap self-start" do %>
                  <%= lucide_icon "unlink", class: "w-4 h-4" %>
                  解除绑定
                <% end %>
              </div>
            <% else %>
              <!-- 未绑定 - 显示二维码 -->
              <% 
                # 生成或获取绑定令牌（5分钟有效期）
                @binding_token = @bot.binding_tokens.where('expires_at > ?', Time.current).where(used_at: nil).first
                @binding_token ||= @bot.binding_tokens.create!
              %>
              <div class="card border-2 border-warning bg-warning/5 p-4" 
                   data-controller="rokid-binding"
                   data-rokid-binding-expires-at-value="<%= @binding_token.expires_at.iso8601 %>"
                   data-rokid-binding-bot-id-value="<%= @bot.id %>">
                <div class="flex items-start gap-3">
                  <%= lucide_icon "qr-code", class: "w-6 h-6 text-warning flex-shrink-0 mt-1" %>
                  <div class="flex-1">
                    <h3 class="font-bold text-warning mb-2">等待绑定</h3>
                    <p class="text-sm text-secondary mb-3">
                      首次使用时，在 Rokid 眼镜上说话，系统会引导您拍照此二维码完成绑定。
                    </p>
                    <!-- 二维码容器 -->
                    <div class="relative flex justify-center py-4">
                      <%= image_tag "https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=#{@binding_token.token}", 
                                    alt: "Bot Binding QR Code", 
                                    class: "border-4 border-white rounded-lg shadow-lg",
                                    data: { rokid_binding_target: "qrcode" } %>
                      <!-- 刷新按钮（默认隐藏） -->
                      <button 
                        data-rokid-binding-target="refreshButton"
                        data-action="click->rokid-binding#refresh"
                        class="hidden absolute inset-0 bg-black/60 hover:bg-black/70 rounded-lg flex items-center justify-center transition-colors group">
                        <div class="text-center text-white">
                          <%= lucide_icon "refresh-cw", class: "w-12 h-12 mx-auto mb-2 group-hover:rotate-180 transition-transform duration-500" %>
                          <p class="text-lg font-bold">二维码已过期</p>
                          <p class="text-sm mt-1">点击刷新</p>
                        </div>
                      </button>
                    </div>
                    <p class="text-xs text-center text-muted mt-2" data-rokid-binding-target="expiresAt">
                      <%= lucide_icon "info", class: "w-3 h-3 inline" %>
                      安全令牌 (有效期: <%= distance_of_time_in_words_to_now(@binding_token.expires_at) %>)
                    </p>
                    <p class="text-xs text-center text-warning mt-1">
                      <%= lucide_icon "shield-check", class: "w-3 h-3 inline" %>
                      此令牌仅用于一次性绑定，5分钟后自动失效
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Rokid MCP Integration -->
          

          <!-- Connection Command -->
          <div>
            <label class="form-label">快速开始</label>
            <% 
              # 获取或创建有效的绑定 token
              @skill_binding_token = @bot.binding_tokens.where('expires_at > ?', Time.current).where(used_at: nil).first
              @skill_binding_token ||= @bot.binding_tokens.create!
              @skill_url = skill_md_bot_url(@bot, token: @skill_binding_token.token)
            %>
            <div class="card p-4 bg-surface-elevated" data-controller="clipboard">
              <div class="flex items-start justify-between gap-3">
                <div class="flex-1">
                  <p class="text-sm text-secondary mb-3">
                    告诉 OpenClaw：「<span class="font-mono text-primary">帮我安装 skill: <%= @skill_url %></span>」
                  </p>
                  <p class="text-xs text-muted">
                    OpenClaw 会自动读取 SKILL.md 并执行安装命令
                  </p>
                </div>
                <button 
                  data-action="click->clipboard#copy" 
                  class="btn-ghost btn-sm flex items-center gap-1.5 shrink-0"
                  title="复制命令">
                  <%= lucide_icon "copy", class: "w-4 h-4" %>
                  <span>复制</span>
                </button>
              </div>
              <input 
                type="hidden" 
                data-clipboard-target="source" 
                value="帮我安装 skill: <%= @skill_url %>">
              <div class="flex items-center gap-3 mt-3">
                <span class="badge-warning text-xs">
                  <%= lucide_icon "shield-check", class: "w-3 h-3 inline" %>
                  链接有效期 <%= distance_of_time_in_words_to_now(@skill_binding_token.expires_at) %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Real-time Logs -->
      

      <!-- Session History -->
      
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Stats -->
      <div class="card card-elevated">
        <div class="card-header">
          <h3 class="font-bold text-primary">Quick Stats</h3>
        </div>
        <div class="card-body space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-muted">Status</span>
            <% if @bot.online? %>
              <span class="badge-success">Online</span>
            <% else %>
              <span class="badge-neutral">Offline</span>
            <% end %>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted">Total Sessions</span>
            <span class="font-bold text-primary"><%= @bot.bot_sessions.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted">Created</span>
            <span class="text-sm text-secondary"><%= @bot.created_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted">Last Updated</span>
            <span class="text-sm text-secondary"><%= @bot.updated_at.strftime("%b %d, %Y") %></span>
          </div>
        </div>
      </div>

      <!-- Documentation -->
      

      <!-- Quick Actions -->
      <div class="card card-elevated">
        <div class="card-header">
          <h3 class="font-bold text-primary">Quick Actions</h3>
        </div>
        <div class="card-body space-y-2">
          <button class="btn-outline w-full justify-center">
            <%= lucide_icon "refresh-cw", class: "w-4 h-4" %>
            Regenerate Tokens
          </button>
          <button class="btn-outline w-full justify-center">
            <%= lucide_icon "download", class: "w-4 h-4" %>
            Export Config
          </button>
          <button class="btn-outline w-full justify-center">
            <%= lucide_icon "test-tube", class: "w-4 h-4" %>
            Test Connection
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
