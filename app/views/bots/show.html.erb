<div class="container-lg mx-auto px-6 py-8" 
     data-controller="bot" 
     data-bot-stream-name-value="bot_<%= @bot.id %>"
     data-bot-bot-id-value="<%= @bot.id %>">
  
  <!-- Header with Actions -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <%= link_to bots_path, class: "inline-flex items-center gap-2 text-muted hover:text-primary transition-all mb-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4" %>
        Back to Bots
      <% end %>
      <h1 class="text-3xl font-bold flex items-center gap-3">
        <span class="gradient-text"><%= @bot.name %></span>
        <span class="<%= @bot.online? ? 'badge-success' : 'badge-neutral' %> flex items-center gap-1" 
              data-bot-target="status">
          <%= lucide_icon @bot.online? ? "signal" : "signal-zero", class: "w-3 h-3" %>
          <span data-bot-target="statusText"><%= @bot.online? ? "Online" : "Offline" %></span>
        </span>
        <!-- Connection Indicator -->
        <span class="w-2 h-2 rounded-full <%= @bot.online? ? 'bg-success' : 'bg-danger' %>" 
              data-connection-indicator></span>
      </h1>
      <p class="text-muted mt-2"><%= @bot.description.presence || "No description" %></p>
    </div>
    <div class="flex gap-3">
      <%= link_to edit_bot_path(@bot), class: "btn-outline" do %>
        <%= lucide_icon "edit", class: "w-5 h-5" %>
        Edit
      <% end %>
      <%= button_to bot_path(@bot), method: :delete, 
          data: { turbo_confirm: "Are you sure you want to delete this bot?" },
          class: "btn-danger" do %>
        <%= lucide_icon "trash-2", class: "w-5 h-5" %>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Real-time Stats -->
      <div class="grid md:grid-cols-3 gap-4">
        <div class="card card-elevated">
          <div class="card-body">
            <div class="flex items-center justify-between mb-2">
              <span class="text-muted text-sm">Active Sessions</span>
              <%= lucide_icon "activity", class: "w-4 h-4 text-primary" %>
            </div>
            <div class="text-3xl font-bold text-primary" data-bot-target="sessions">
              <%= @bot.bot_sessions.active.count %>
            </div>
          </div>
        </div>
        
        <div class="card card-elevated">
          <div class="card-body">
            <div class="flex items-center justify-between mb-2">
              <span class="text-muted text-sm">Uptime</span>
              <%= lucide_icon "clock", class: "w-4 h-4 text-success" %>
            </div>
            <div class="text-xl font-bold text-primary" data-bot-target="uptime">
              <%= @bot.active_session ? distance_of_time_in_words(@bot.active_session.duration) : "N/A" %>
            </div>
          </div>
        </div>
        
        <div class="card card-elevated">
          <div class="card-body">
            <div class="flex items-center justify-between mb-2">
              <span class="text-muted text-sm">Total Sessions</span>
              <%= lucide_icon "database", class: "w-4 h-4 text-secondary" %>
            </div>
            <div class="text-3xl font-bold text-primary">
              <%= @bot.bot_sessions.count %>
            </div>
          </div>
        </div>
      </div>

      <!-- Integration Section -->
      <div class="card card-elevated">
        <div class="card-header">
          <h2 class="text-xl font-bold text-primary">Integration Details</h2>
        </div>
        <div class="card-body space-y-6">
          <!-- SDK Token -->
          <div>
            <label class="form-label">SDK Token</label>
            <div class="flex items-center gap-2" data-controller="clipboard">
              <input type="text" 
                     value="<%= @bot.sdk_token %>" 
                     readonly 
                     class="form-input font-mono text-sm"
                     data-clipboard-target="source">
              <button data-action="click->clipboard#copy" class="btn-outline btn-sm">
                <%= lucide_icon "copy", class: "w-4 h-4" %>
              </button>
            </div>
            <p class="form-help">Use this token to connect your local OpenClaw instance</p>
          </div>

          <!-- API Key -->
          <div>
            <label class="form-label">API Key</label>
            <div class="flex items-center gap-2" data-controller="clipboard">
              <input type="text" 
                     value="<%= @bot.api_key %>" 
                     readonly 
                     class="form-input font-mono text-sm"
                     data-clipboard-target="source">
              <button data-action="click->clipboard#copy" class="btn-outline btn-sm">
                <%= lucide_icon "copy", class: "w-4 h-4" %>
              </button>
            </div>
            <p class="form-help">API key for webhook authentication</p>
          </div>

          <!-- MCP Plugin URL -->
          <div>
            <label class="form-label">MCP Plugin URL</label>
            <div class="flex items-center gap-2" data-controller="clipboard">
              <input type="text" 
                     value="<%= @bot.mcp_url %>" 
                     readonly 
                     class="form-input font-mono text-sm"
                     data-clipboard-target="source">
              <button data-action="click->clipboard#copy" class="btn-outline btn-sm">
                <%= lucide_icon "copy", class: "w-4 h-4" %>
              </button>
            </div>
            <p class="form-help">Use this URL to integrate with Coze, Claude, etc.</p>
          </div>

          <!-- Connection Command -->
          <div>
            <label class="form-label">Quick Start Command</label>
            <div class="card p-4 bg-surface-elevated">
              <code class="text-sm font-mono text-secondary">
                # Install the plugin<br>
                openclaw plugins install @eyeclaw/sdk<br>
                <br>
                # Configure<br>
                openclaw config set channels.eyeclaw.enabled true<br>
                openclaw config set channels.eyeclaw.botId "<%= @bot.id %>"<br>
                openclaw config set channels.eyeclaw.sdkToken "<%= @bot.sdk_token %>"<br>
                openclaw config set channels.eyeclaw.serverUrl "<%= request.base_url %>"<br>
                <br>
                # Restart gateway<br>
                openclaw gateway restart<br>
              </code>
            </div>
            <p class="form-help mt-2">Copy and paste these commands to connect your local OpenClaw instance</p>
          </div>

          <!-- Plugin Update -->
          <div>
            <label class="form-label">Update Plugin</label>
            <div class="card p-4 bg-surface-elevated">
              <code class="text-sm font-mono text-secondary">
                openclaw plugins update eyeclaw
              </code>
            </div>
            <p class="form-help mt-2">Run this command to update the plugin to the latest version</p>
          </div>
        </div>
      </div>

      <!-- Real-time Logs -->
      <div class="card card-elevated">
        <div class="card-header flex items-center justify-between">
          <h2 class="text-xl font-bold text-primary">Activity Logs</h2>
          <span class="text-xs text-muted font-mono">Real-time</span>
        </div>
        <div class="card-body">
          <div data-bot-target="logs" class="space-y-3 max-h-96 overflow-y-auto">
            <!-- Logs will be inserted here by Stimulus controller -->
            <div class="text-center py-8 text-muted">
              <%= lucide_icon "inbox", class: "w-12 h-12 mx-auto mb-3 opacity-50" %>
              <p>Waiting for activity...</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Session History -->
      <div class="card card-elevated">
        <div class="card-header">
          <h2 class="text-xl font-bold text-primary">Session History</h2>
        </div>
        <div class="card-body">
          <% if @bot_sessions.any? %>
            <div class="space-y-3">
              <% @bot_sessions.each do |session| %>
                <div class="flex items-center justify-between p-4 rounded-lg bg-surface-elevated">
                  <div class="flex items-center gap-3">
                    <% if session.active? %>
                      <%= lucide_icon "signal", class: "w-5 h-5 text-success" %>
                    <% else %>
                      <%= lucide_icon "signal-zero", class: "w-5 h-5 text-muted" %>
                    <% end %>
                    <div>
                      <div class="font-mono text-sm text-primary">
                        <%= session.session_id.first(16) %>...
                      </div>
                      <div class="text-xs text-muted">
                        Connected <%= time_ago_in_words(session.connected_at) %> ago
                      </div>
                    </div>
                  </div>
                  <div class="text-right">
                    <% if session.active? %>
                      <span class="badge-success">Active</span>
                    <% else %>
                      <span class="badge-neutral">Inactive</span>
                    <% end %>
                    <div class="text-xs text-muted mt-1">
                      Duration: <%= distance_of_time_in_words(session.duration) %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 text-muted">
              <%= lucide_icon "inbox", class: "w-12 h-12 mx-auto mb-3 opacity-50" %>
              <p>No session history yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Stats -->
      <div class="card card-elevated">
        <div class="card-header">
          <h3 class="font-bold text-primary">Quick Stats</h3>
        </div>
        <div class="card-body space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-muted">Status</span>
            <% if @bot.online? %>
              <span class="badge-success">Online</span>
            <% else %>
              <span class="badge-neutral">Offline</span>
            <% end %>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted">Total Sessions</span>
            <span class="font-bold text-primary"><%= @bot.bot_sessions.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted">Created</span>
            <span class="text-sm text-secondary"><%= @bot.created_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted">Last Updated</span>
            <span class="text-sm text-secondary"><%= @bot.updated_at.strftime("%b %d, %Y") %></span>
          </div>
        </div>
      </div>

      <!-- Documentation -->
      <div class="card card-elevated">
        <div class="card-header">
          <h3 class="font-bold text-primary">Documentation</h3>
        </div>
        <div class="card-body space-y-3">
          <a href="#" class="flex items-center gap-3 p-3 rounded-lg hover:bg-surface-elevated transition-all group">
            <%= lucide_icon "book-open", class: "w-5 h-5 text-primary" %>
            <div class="flex-1">
              <div class="font-medium text-primary group-hover:gradient-text">SDK Guide</div>
              <div class="text-xs text-muted">Setup and integration</div>
            </div>
            <%= lucide_icon "external-link", class: "w-4 h-4 text-muted" %>
          </a>
          <a href="#" class="flex items-center gap-3 p-3 rounded-lg hover:bg-surface-elevated transition-all group">
            <%= lucide_icon "puzzle", class: "w-5 h-5 text-secondary" %>
            <div class="flex-1">
              <div class="font-medium text-primary group-hover:gradient-text">MCP Integration</div>
              <div class="text-xs text-muted">Connect to AI platforms</div>
            </div>
            <%= lucide_icon "external-link", class: "w-4 h-4 text-muted" %>
          </a>
          <a href="#" class="flex items-center gap-3 p-3 rounded-lg hover:bg-surface-elevated transition-all group">
            <%= lucide_icon "code-2", class: "w-5 h-5 text-primary" %>
            <div class="flex-1">
              <div class="font-medium text-primary group-hover:gradient-text">API Reference</div>
              <div class="text-xs text-muted">REST API documentation</div>
            </div>
            <%= lucide_icon "external-link", class: "w-4 h-4 text-muted" %>
          </a>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card card-elevated">
        <div class="card-header">
          <h3 class="font-bold text-primary">Quick Actions</h3>
        </div>
        <div class="card-body space-y-2">
          <%= link_to chat_bot_path(@bot), class: "btn-primary w-full justify-center" do %>
            <%= lucide_icon "message-circle", class: "w-4 h-4" %>
            Test Chat
          <% end %>
          <button class="btn-outline w-full justify-center">
            <%= lucide_icon "refresh-cw", class: "w-4 h-4" %>
            Regenerate Tokens
          </button>
          <button class="btn-outline w-full justify-center">
            <%= lucide_icon "download", class: "w-4 h-4" %>
            Export Config
          </button>
          <button class="btn-outline w-full justify-center">
            <%= lucide_icon "test-tube", class: "w-4 h-4" %>
            Test Connection
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
