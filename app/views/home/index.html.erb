          <%= link_to sign_up_path, class: "btn-primary btn-xl" do %>
            <%= lucide_icon "user-plus", class: "w-5 h-5" %>
            注册账户
          <% end %>
        <% end %>
        
      </div>
    </div>
  </div>
</section>

