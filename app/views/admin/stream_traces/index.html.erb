<% content_for :title, "Stream traces" %>

<div class="container-xl">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Stream traces Management</h1>
    <%= link_to new_admin_stream_trace_path, class: "btn-primary" do %>
      <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
      New Stream trace
    <% end %>
  </div>

  <!-- Stream traces Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <% if @stream_traces.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Trace</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Bot</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Chunks</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Loss</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created At</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-gray-50 dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <% @stream_traces.each do |stream_trace| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors <%= 'bg-red-50 dark:bg-red-900/10' if stream_trace.status == 'anomaly' %>">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900 dark:text-gray-100"><%= stream_trace.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 dark:text-gray-100">
                    <%= link_to stream_trace.trace_id&.[](0..7) || 'N/A', admin_stream_trace_path(stream_trace.id), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= stream_trace.bot&.name || '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <% if stream_trace.status == 'anomaly' %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                        <%= lucide_icon "alert-triangle", class: "w-3 h-3 inline mr-1" %>
                        Anomaly
                      </span>
                    <% elsif stream_trace.status == 'completed' %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                        <%= lucide_icon "check-circle", class: "w-3 h-3 inline mr-1" %>
                        Completed
                      </span>
                    <% else %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
                        <%= stream_trace.status || 'Unknown' %>
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <% if stream_trace.sdk_total_chunks.present? %>
                      <div class="flex items-center space-x-1">
                        <span class="text-blue-600 dark:text-blue-400 font-semibold"><%= stream_trace.sdk_total_chunks %></span>
                        <span class="text-gray-400">→</span>
                        <span class="<%= stream_trace.sse_chunk_count == stream_trace.sdk_total_chunks ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %> font-semibold">
                          <%= stream_trace.sse_chunk_count || 0 %>
                        </span>
                      </div>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <% if stream_trace.missing_sequences.present? %>
                      <div class="flex items-center space-x-2">
                        <span class="px-2 py-1 text-xs font-semibold rounded-md <%= case stream_trace.loss_position
                          when 'head' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                          when 'tail' then 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
                          when 'middle' then 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200'
                          when 'mixed' then 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200'
                          else 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200'
                        end %>">
                          <%= stream_trace.loss_position&.capitalize || 'Unknown' %>
                        </span>
                        <span class="text-xs text-red-600 dark:text-red-400 font-mono">
                          -<%= stream_trace.missing_sequences.size %>
                        </span>
                      </div>
                    <% else %>
                      <span class="text-green-600 dark:text-green-400 text-xs font-semibold">✓ None</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= stream_trace.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                    <div class="flex justify-center space-x-2">
                      <%= link_to admin_stream_trace_path(stream_trace.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "eye", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to edit_admin_stream_trace_path(stream_trace.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "pencil", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to admin_stream_trace_path(stream_trace.id), method: :delete,
                          data: { confirm: "Are you sure you want to delete this stream_trace?" },
                          class: "p-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hover:bg-red-100 dark:hover:bg-red-900 rounded transition-colors" do %>
                        <%= lucide_icon "trash-2", class: "w-4 h-4" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
            <%= lucide_icon "file-text", class: "w-12 h-12 text-gray-400" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-2">No stream_traces</h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6">Get started by creating a new stream_trace.</p>
          <%= link_to new_admin_stream_trace_path, class: "btn-primary" do %>
            <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
            New Stream trace
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pagination -->
  <% if @stream_traces.respond_to?(:current_page) %>
    <div class="mt-6">
      <%= paginate @stream_traces %>
    </div>
  <% end %>
</div>