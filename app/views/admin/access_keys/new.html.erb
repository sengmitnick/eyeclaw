<% content_for :title, "New Access key" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_access_keys_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Access keys
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Access key</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @access_key], local: true, class: "space-y-6" do |form| %>
        <!-- Name -->
        <div class="form-group">
          <%= form.label :name, "名称" %>
          <%= form.text_field :name, placeholder: "例如：灵珠平台专用 AK" %>
        </div>

        <!-- Description -->
        <div class="form-group">
          <%= form.label :description, "描述" %>
          <%= form.text_area :description, rows: 5, placeholder: "描述该 AK 的用途..." %>
        </div>

        <!-- Is active -->
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :is_active, 
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">启用状态</span>
          </label>
        </div>

        <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 text-sm text-blue-800 dark:text-blue-200">
          <%= lucide_icon "info", class: "w-4 h-4 inline mr-2" %>
          创建后将自动生成唯一的 Access Key，格式为 ak_xxxx
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_access_keys_path, class: "btn-ghost" do %>
            取消
          <% end %>
          <%= form.submit "创建 Access Key", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>