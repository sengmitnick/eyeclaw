<% content_for :title, @access_key.respond_to?(:name) ? @access_key.name : "Access key" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_access_keys_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
        Back to Access keys
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @access_key.respond_to?(:name) ? @access_key.name : "Access key ##{@access_key.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_access_key_path(@access_key.id), class: "btn-primary" do %>
          <%= lucide_icon "pencil", class: "w-5 h-5 mr-2" %>
          Edit
        <% end %>

        <%= link_to admin_access_key_path(@access_key.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this access_key?" },
            class: "btn-danger" do %>
          <%= lucide_icon "trash-2", class: "w-5 h-5 mr-2" %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Access key Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @access_key.name %></div>
        </div>

        <!-- Key -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Access Key</label>
          <div class="flex items-center space-x-3">
            <code class="flex-1 px-4 py-3 bg-gray-100 dark:bg-gray-800 rounded-lg text-sm font-mono text-gray-900 dark:text-gray-100 break-all">
              <%= @access_key.key %>
            </code>
            <button type="button" 
                    data-controller="clipboard" 
                    data-clipboard-text-value="<%= @access_key.key %>"
                    data-action="clipboard#copy"
                    class="btn-secondary whitespace-nowrap">
              <%= lucide_icon "copy", class: "w-4 h-4 mr-2" %>
              复制
            </button>
          </div>
          <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
            <%= lucide_icon "alert-circle", class: "w-4 h-4 inline mr-1" %>
            请妥善保管此 Key，用于灵珠平台等第三方服务鉴权
          </p>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@access_key.description) %>
          </div>
        </div>

        <!-- Is active -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Is active</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @access_key.is_active ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @access_key.is_active ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Last used at -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last used at</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @access_key.last_used_at&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @access_key.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @access_key.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@access_key.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @access_key.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@access_key.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
