<% content_for :title, "Edit Access key" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_access_keys_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Access keys
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Edit Access key</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @access_key], local: true, class: "space-y-6" do |form| %>
        <!-- Name -->
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, placeholder: "Enter name..." %>
        </div>

        <!-- Key -->
        <div class="form-group">
          <%= form.label :key %>
          <%= form.text_field :key, placeholder: "Enter key..." %>
        </div>

        <!-- Description -->
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, rows: 5, placeholder: "Enter description..." %>
        </div>

        <!-- Is active -->
        <div class="form-group">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :is_active,
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Is active</span>
          </label>
        </div>

        <!-- Last used at -->
        <div class="form-group">
          <%= form.label :last_used_at %>
          <%= form.datetime_field :last_used_at, placeholder: "Select last used at..." %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_access_key_path(@access_key.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Access key", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
