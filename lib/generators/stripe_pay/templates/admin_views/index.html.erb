<%% content_for :title, "Payments" %>

<div class="container-xl">
  <!-- Page Title -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Payments</h1>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Yesterday's Revenue -->
    <div class="card bg-gradient-to-br from-green-500 to-green-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">Yesterday</h3>
          <%%= lucide_icon "trending-up", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= number_to_currency(@yesterday_revenue, unit: '$') %>
        </p>
        <p class="text-xs opacity-75 mt-2">Yesterday's revenue</p>
      </div>
    </div>

    <!-- This Month -->
    <div class="card bg-gradient-to-br from-blue-500 to-blue-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">This Month</h3>
          <%%= lucide_icon "calendar", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= number_to_currency(@this_month_revenue, unit: '$') %>
        </p>
        <p class="text-xs opacity-75 mt-2">
          <%%= @this_month_count %> payments
        </p>
      </div>
    </div>

    <!-- Projected 6-Month Revenue -->
    <div class="card bg-gradient-to-br from-purple-500 to-purple-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">Projected 6M</h3>
          <%%= lucide_icon "bar-chart-3", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= number_to_currency(@projected_6month_revenue, unit: '$') %>
        </p>
        <p class="text-xs opacity-75 mt-2">Based on this month's pace</p>
      </div>
    </div>

    <!-- Total Revenue -->
    <div class="card bg-gradient-to-br from-orange-500 to-orange-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">Total Revenue</h3>
          <%%= lucide_icon "dollar-sign", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= number_to_currency(@total_revenue, unit: '$') %>
        </p>
        <p class="text-xs opacity-75 mt-2">All time paid payments</p>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body">
      <%%= form_with url: admin_payments_path, method: :get, class: "flex gap-4 flex-wrap items-center" do |f| %>
        <div class="flex-1 min-w-[200px]">
          <%%= f.text_field :q, value: params[:q], placeholder: "Search by ID", class: "form-input w-full" %>
        </div>
        <%%= f.select :status,
            options_for_select([['All', ''], ['Pending', 'pending'], ['Processing', 'processing'], ['Paid', 'paid'], ['Failed', 'failed'], ['Canceled', 'canceled'], ['Refunded', 'refunded']], params[:status]),
            {}, class: "form-select" %>
        <%%= f.submit "Filter", class: "btn-primary" %>
      <%% end %>
    </div>
  </div>

  <!-- Payments Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <%% if @payments.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Payable</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Customer</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <%% @payments.each do |payment| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="font-mono text-sm text-gray-900 dark:text-gray-100">#<%%= payment.id %></span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100"><%%= payment.payable_type %> #<%%= payment.payable_id %></div>
                    <div class="text-sm text-gray-500 dark:text-gray-400"><%%= payment.product_description %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100"><%%= payment.customer_name %></div>
                    <div class="text-sm text-gray-500 dark:text-gray-400"><%%= payment.customer_email %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">
                    <%%= number_to_currency(payment.amount, unit: payment.currency.upcase + ' ') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="badge-<%%= case payment.status
                          when 'paid' then 'success'
                          when 'failed' then 'danger'
                          when 'pending' then 'warning'
                          when 'processing' then 'info'
                          else 'neutral'
                          end %>">
                      <%%= payment.display_status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%%= payment.created_at.strftime('%Y-%m-%d %H:%M') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                    <%%= link_to "View", [:admin, payment], class: "btn-sm btn-outline" %>
                  </td>
                </tr>
              <%% end %>
            </tbody>
          </table>
        </div>
      <%% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">No payments found.</p>
        </div>
      <%% end %>
    </div>
  </div>

  <!-- Pagination -->
  <%% if @payments.respond_to?(:current_page) %>
    <div class="flex justify-center mt-6">
      <%%= paginate @payments %>
    </div>
  <%% end %>
</div>
