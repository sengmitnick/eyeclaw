<!-- Floating Navbar - Modern floating design with rounded corners and shadow -->
<!--
STYLE VARIANTS - Uncomment or modify classes below to customize:

Container:
- Medium spacing (default): mx-4 mt-4
- Wide spacing: mx-6 mt-6 or mx-8 mt-8
- Narrow: mx-2 mt-2
- No spacing: remove mx and mt classes

Radius:
- Large (default): rounded-2xl
- Medium: rounded-xl
- Small: rounded-lg
- Full: rounded-full (for pill shape)

Shadow:
- Medium (default): shadow-lg
- Subtle: shadow-md
- Strong: shadow-xl shadow-black/10
- Glow: shadow-2xl shadow-primary/20

Background:
- Elevated (default): bg-surface-elevated
- Solid: bg-white dark:bg-gray-800
- Glass: backdrop-blur-lg bg-surface-elevated/90
- Gradient: bg-gradient-to-r from-surface-elevated to-surface

Border:
- Subtle (default): border border-border
- Strong: border-2 border-border
- None: remove border class
- Accent: border border-primary/20

Size:
- Compact: h-14
- Normal (default): h-16
- Large: h-20

Animation (add these for entrance effects):
- Fade in: animate-in fade-in duration-300
- Slide down: animate-in slide-in-from-top duration-300
-->
<!-- DO NOT modify data-controller, data-action, or data-dropdown-target attributes -->

<div data-controller="dropdown" data-dropdown-close-on-click-outside-value="false">
  <%# Use fixed positioning on homepage, sticky on other pages for better scroll behavior %>
  <div class="<%= controller_name == 'home' && action_name == 'index' ? 'fixed top-4 px-4' : 'sticky top-0' %> left-0 right-0 z-50">
    <nav class="<%= controller_name == 'home' && action_name == 'index' ? 'rounded-2xl' : '' %> backdrop-blur-lg bg-surface-elevated/70 border border-border shadow-lg">
    <div class="container-xl mx-auto px-6">
      <div class="flex items-center justify-between h-16">

        <!-- Logo -->
        <div class="flex items-center">
          <%= link_to Rails.application.config.x.appname, root_path, class: "text-xl font-bold text-primary" %>
        </div>

        <!-- Desktop navigation -->
        <div class="hidden md:flex items-center space-x-6">
          <%= render 'shared/nav_links' %>
        </div>

        <!-- Desktop auth -->
        <div class="hidden md:flex items-center space-x-4">
          <% if current_user %>
            <%= render 'shared/user_dropdown' %>
          <% else %>
            <%= link_to "Sign In", sign_in_path, class: "btn-ghost btn-sm" %>
            <%= link_to "Get Started", sign_up_path, class: "btn-primary btn-sm" %>
          <% end %>
        </div>

        <!-- Mobile hamburger - DO NOT REMOVE -->
        <button type="button"
                data-action="click->dropdown#toggle"
                class="md:hidden p-2 text-secondary hover:bg-surface rounded-lg transition-colors">
          <%= lucide_icon "menu", class: "w-6 h-6" %>
        </button>
      </div>
    </div>
    </nav>
  </div>

  <!-- Mobile drawer - DO NOT REMOVE this structure -->
  <div data-dropdown-target="menu" class="hidden fixed inset-0 z-[100] md:hidden">
    <!-- Background overlay -->
    <div class="fixed inset-0 bg-black/50" data-action="click->dropdown#close"></div>

    <!-- Drawer content -->
    <div class="fixed right-0 top-0 h-full w-64 bg-surface-elevated shadow-xl overflow-y-auto">
      <div class="p-4">
        <!-- Close button -->
        <button type="button"
                data-action="click->dropdown#close"
                class="mb-4 p-2 hover:bg-surface rounded-lg transition-colors">
          <%= lucide_icon "x", class: "w-6 h-6" %>
        </button>

        <!-- Mobile navigation -->
        <div class="mb-6 flex flex-col space-y-1">
          <%= render 'shared/nav_links' %>
        </div>

        <!-- Mobile user menu -->
        <div class="border-t border-gray-300 dark:border-gray-700 pt-4">
          <% if current_user %>
            <%= render 'shared/user_dropdown' %>
          <% else %>
            <div class="flex flex-col space-y-2">
              <%= link_to "Sign In", sign_in_path, class: "btn-ghost btn-md w-full" %>
              <%= link_to "Get Started", sign_up_path, class: "btn-primary btn-md w-full" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ⚠️ IMPORTANT: This navbar uses fixed positioning on homepage only -->
<!-- Homepage (home/index.html.erb): Add data-testid="home-first-section" class="pt-28" to your first content section (as direct child of container) -->
<!-- Other pages use sticky positioning - no extra padding needed -->
