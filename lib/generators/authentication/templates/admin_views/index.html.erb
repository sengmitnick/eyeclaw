<%% content_for :title, "Users" %>

<div class="container-xl">
  <!-- Page Title -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Users</h1>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Today's New Users -->
    <div class="card bg-gradient-to-br from-teal-500 to-teal-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">Today</h3>
          <%%= lucide_icon "user-plus", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= @today_users_count %>
        </p>
        <p class="text-xs opacity-75 mt-2">New users today</p>
      </div>
    </div>

    <!-- This Month's New Users -->
    <div class="card bg-gradient-to-br from-sky-500 to-sky-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">This Month</h3>
          <%%= lucide_icon "calendar", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= @this_month_users_count %>
        </p>
        <p class="text-xs opacity-75 mt-2">New users this month</p>
      </div>
    </div>

    <!-- Active Users (Last 7 Days) -->
    <div class="card bg-gradient-to-br from-emerald-500 to-emerald-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">Active Users</h3>
          <%%= lucide_icon "activity", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= @active_users_count %>
        </p>
        <p class="text-xs opacity-75 mt-2">Active in last 7 days</p>
      </div>
    </div>

    <!-- Total Users -->
    <div class="card bg-gradient-to-br from-violet-500 to-violet-600 text-white border-0">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium opacity-90">Total Users</h3>
          <%%= lucide_icon "users", class: "w-5 h-5 opacity-75" %>
        </div>
        <p class="text-3xl font-bold">
          <%%= @total_users_count %>
        </p>
        <p class="text-xs opacity-75 mt-2">All registered users</p>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body">
      <%%= form_with url: admin_users_path, method: :get, class: "flex gap-4 flex-wrap items-center" do |f| %>
        <div class="flex-1 min-w-[200px]">
          <%%= f.text_field :q, value: params[:q], placeholder: "Search by name or email", class: "form-input w-full" %>
        </div>
        <%%= f.select :verified,
            options_for_select([['All', ''], ['Verified', 'true'], ['Unverified', 'false']], params[:verified]),
            {}, class: "form-select" %>
        <%%= f.submit "Filter", class: "btn-primary" %>
      <%% end %>
    </div>
  </div>

  <!-- Users Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <%% if @users.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Verified</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <%% @users.each do |user| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="font-mono text-sm text-gray-900 dark:text-gray-100">#<%%= user.id %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100"><%%= user.name %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900 dark:text-gray-100"><%%= user.email %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%% if user.verified %>
                      <span class="badge-success">Verified</span>
                    <%% else %>
                      <span class="badge-warning">Unverified</span>
                    <%% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%%= user.created_at.strftime('%Y-%m-%d %H:%M') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                    <%%= link_to "View", [:admin, user], class: "btn-sm btn-outline" %>
                  </td>
                </tr>
              <%% end %>
            </tbody>
          </table>
        </div>
      <%% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">No users found.</p>
        </div>
      <%% end %>
    </div>
  </div>

  <!-- Pagination -->
  <%% if @users.respond_to?(:current_page) %>
    <div class="flex justify-center mt-6">
      <%%= paginate @users %>
    </div>
  <%% end %>
</div>
